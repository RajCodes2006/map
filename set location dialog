import React, { useState } from "react";
import { User } from "@/entities/User";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
  DialogDescription,
} from "@/components/ui/dialog";
import { MapPin, Search, Loader2 } from "lucide-react";

export default function SetLocationDialog({ locations, onClose, onLocationSet }) {
  const [searchQuery, setSearchQuery] = useState("");
  const [isSelecting, setIsSelecting] = useState(false);

  const filteredLocations = locations.filter(loc =>
    loc.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
    loc.category.toLowerCase().includes(searchQuery.toLowerCase()) ||
    loc.block_number?.toLowerCase().includes(searchQuery.toLowerCase())
  );

  const handleSelectLocation = async (location) => {
    setIsSelecting(true);
    try {
      await User.updateMyUserData({ 
        current_location: location.name,
        current_latitude: location.latitude,
        current_longitude: location.longitude
      });
      onLocationSet(location);
      onClose();
    } catch (error) {
      console.error("Error setting location:", error);
      alert("Failed to set location. Please try again.");
    } finally {
      setIsSelecting(false);
    }
  };

  return (
    <Dialog open={true} onOpenChange={onClose}>
      <DialogContent className="max-w-md max-h-[80vh]">
        <DialogHeader>
          <DialogTitle className="flex items-center gap-2">
            <MapPin className="w-5 h-5 text-purple-600" />
            Set My Current Location
          </DialogTitle>
          <DialogDescription>
            Where are you on campus right now?
          </DialogDescription>
        </DialogHeader>

        <div className="space-y-4">
          <div className="relative">
            <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400" />
            <Input
              placeholder="Search your location..."
              value={searchQuery}
              onChange={(e) => setSearchQuery(e.target.value)}
              className="pl-10"
              disabled={isSelecting}
            />
          </div>

          <div className="max-h-[400px] overflow-y-auto space-y-2">
            {filteredLocations.map((location) => (
              <button
                key={location.id}
                onClick={() => handleSelectLocation(location)}
                disabled={isSelecting}
                className="w-full text-left p-3 hover:bg-purple-50 rounded-lg border border-gray-200 hover:border-purple-300 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
              >
                <div className="flex items-start gap-3">
                  <div className="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    {isSelecting ? (
                      <Loader2 className="w-5 h-5 text-purple-600 animate-spin" />
                    ) : (
                      <MapPin className="w-5 h-5 text-purple-600" />
                    )}
                  </div>
                  <div className="flex-1">
                    <p className="font-medium text-gray-900">{location.name}</p>
                    <p className="text-xs text-gray-500 capitalize mt-1">
                      {location.category}
                      {location.block_number && ` â€¢ Block ${location.block_number}`}
                    </p>
                  </div>
                </div>
              </button>
            ))}

            {filteredLocations.length === 0 && (
              <div className="text-center py-8 text-gray-500">
                <MapPin className="w-12 h-12 mx-auto mb-2 text-gray-300" />
                <p className="text-sm">No locations found</p>
              </div>
            )}
          </div>
        </div>
      </DialogContent>
    </Dialog>
  );
}
