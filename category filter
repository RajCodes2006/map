import React from "react";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";

const categories = [
  { value: "all", label: "All Locations", icon: "ğŸ“" },
  { value: "academic", label: "Academic", icon: "ğŸ“š" },
  { value: "hostel", label: "Hostels", icon: "ğŸ " },
  { value: "cafeteria", label: "Food", icon: "ğŸ½ï¸" },
  { value: "library", label: "Libraries", icon: "ğŸ“–" },
  { value: "sports", label: "Sports", icon: "âš½" },
  { value: "shop", label: "Shops", icon: "ğŸ›ï¸" },
  { value: "atm", label: "ATM", icon: "ğŸ’³" },
  { value: "stationary", label: "Stationary", icon: "ğŸ“" },
  { value: "medical", label: "Medical", icon: "âš•ï¸" },
  { value: "admin", label: "Admin", icon: "ğŸ›ï¸" },
  { value: "entrance", label: "Entrances", icon: "ğŸšª" }
];

export default function CategoryFilter({ selectedCategory, onCategoryChange }) {
  return (
    <div>
      <h3 className="font-semibold text-gray-900 mb-3">Filter by Category</h3>
      <div className="flex flex-wrap gap-2">
        {categories.map((category) => (
          <Button
            key={category.value}
            variant={selectedCategory === category.value ? "default" : "outline"}
            size="sm"
            className={`transition-all ${
              selectedCategory === category.value
                ? "bg-purple-600 hover:bg-purple-700 shadow-md"
                : "hover:bg-purple-50 hover:border-purple-300"
            }`}
            onClick={() => onCategoryChange(category.value)}
          >
            <span className="mr-1.5">{category.icon}</span>
            {category.label}
          </Button>
        ))}
      </div>
    </div>
  );
}
